<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OppoDialogTextAppearance.Title" parent="@style/OppoDialogTextAppearance">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/TD11</item>
        <item name="android:textColor">@color/oppo_alert_dialog_title_text_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="OppoListViewTextAppearance.Large" parent="@style/OppoListViewTextAppearance">
        <item name="android:textSize">@dimen/oppo_list_text_size_large</item>
        <item name="android:textColor">@color/oppo_list_text_color_large</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="OppoListViewTextAppearance.Small" parent="@style/OppoListViewTextAppearance">
        <item name="android:textSize">@dimen/oppo_list_text_size_small</item>
        <item name="android:textColor">@color/oppo_list_text_color_small</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="OppoPreferenceCategoryStyle.Title" parent="@style/OppoPreferenceCategoryStyle">
        <item name="android:textSize">@dimen/oppo_preference_category_text_size</item>
        <item name="android:textColor">@color/oppo_preference_category_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:id">@android:id/title</item>
        <item name="android:paddingTop">@dimen/oppo_common_category_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/oppo_common_category_text_padding_bottom</item>
        <item name="android:minHeight">@dimen/oppo_preference_category_text_height</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingStart">@dimen/oppo_preference_category_text_padding_left</item>
        <item name="android:paddingEnd">@dimen/oppo_preference_category_text_padding_left</item>
    </style>
    <style name="PreferenceStatusText" parent="@style/OppoListViewTextAppearance.Small">
        <item name="android:textSize">@dimen/color_preference_widget_focus_jump_tv</item>
        <item name="android:textColor">@drawable/color_preference_secondary_text_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="PreferenceSummary" parent="@style/OppoListViewTextAppearance.Small">
        <item name="android:textSize">@dimen/color_preference_summary_size</item>
        <item name="android:textColor">@drawable/color_preference_secondary_text_color</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="PreferenceTitle" parent="@style/OppoListViewTextAppearance.Large">
        <item name="android:textSize">@dimen/color_preference_title_size</item>
        <item name="android:textColor">@drawable/color_preference_title_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>
