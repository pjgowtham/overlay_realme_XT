<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:oppo="http://schemas.android.com/apk/res/oppo">
    <LinearLayout android:gravity="center_vertical" android:id="@id/oppo_preference" android:clipChildren="false" android:clipToPadding="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/color_preference_min_height" android:paddingStart="@dimen/color_preference_titel_padding_start" android:paddingEnd="@dimen/color_preference_titel_padding_end">
        <com.color.widget.ColorRoundImageView android:layout_gravity="center" android:id="@android:id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" colorType="round" style="@style/PreferenceIcon" />
